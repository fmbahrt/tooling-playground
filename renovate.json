{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
	{
		"matchManagers": ["helm-values", "helmv3"],
		"matchPaths": ["cluster-addons/argocd/**"],
		"groupName": ["argocd"],
		"labels": ["renovate", "cluster addons", "argocd"]
	},
	{
		"matchManagers": ["helm-values", "helmv3"],
		"matchPaths": ["cluster-addons/cert-manager/**"],
		"groupName": ["cert-manager"],
		"labels": ["renovate", "cluster addons", "cert-manager"]
	},
	{
		"matchManagers": ["helm-values", "helmv3"],
		"matchPaths": ["cluster-addons/ingress-nginx/**"],
		"groupName": ["ingress-nginx"],
		"labels": ["renovate", "cluster addons", "ingress-nginx"]
	}
  ]
}
